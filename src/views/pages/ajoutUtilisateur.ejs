                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlInput1">Telephone</label>
                      <input type="email" class="form-control" id="tel" placeholder="0123456789">
                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlSelect1">Role</label>
                      <select class="form-control" id="exampleFormControlSelect1">
                        <option>Service RH</option>
                        <option>Administrateur</option>
                        <option>Direction</option>
                        <option>Service Communication</option>
                        <option>Salariï¿½</option>
                      </select>
                    </div>
                  </form>
                  </br>
                    <button type="button" class="btn btn-outline-light">Valider</button>
                  <button type="button" class="btn btn-outline-light"><a class="link-secondary" href="/gestionUtilisateur">Retour</button>
              </div>
          </div>
      </div>
  </div>
</div>
